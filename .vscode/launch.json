{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"name": "Debug Web Server",
			"program": "${workspaceFolder}/build/src/cli.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"start"
			]
		},
		{
			"type": "node",
			"name": "Debug API Server",
			"program": "${workspaceFolder}/build/src/cli.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"run",
				"--server-type",
				"api",
				"--api-load",
				"HelloWorldAPI=${workspaceFolder}/build/tests/server/HelloWorldAPI.js",
				"--api-dont-redirect-http-to-https",
				"--api-http-port",
				"8181"
			]
		},
		{
			"type": "node",
			"name": "Debug Web-API Server",
			"program": "${workspaceFolder}/build/src/cli.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"run",
				"--server-type",
				"web-api",
				"--global-api", "HelloWorld",
				"--api-base-url", "testsettse",
				"--api-load",
				"HelloWorldAPI=${workspaceFolder}/build/tests/server/HelloWorldAPI.js",
				"--web-route",
				"/=${workspaceFolder}",
				"--web-dont-redirect-http-to-https",
				"--web-js-url",
				"/build-web/HotStaq.js",
				"--web-http-port",
				"8080",
				"--api-dont-redirect-http-to-https",
				"--api-http-port",
				"8181"
			]
		},
		{
			"type": "node",
			"name": "Debug Web Server - HotSite",
			"program": "${workspaceFolder}/build/src/cli.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"run",
				"--hotsite",
				"./tests/hotsite/HotSite.json",
				"--web-dont-redirect-http-to-https",
				"--web-js-url",
				"/build-web/HotStaq.js",
				"--web-http-port",
				"8080"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Web Server - Development",
			"program": "${workspaceFolder}/build/src/cli.js",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"--dev",
				"--verbose",
				"run",
				"--list-api-routes"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Generate API from HotSite",
			"program": "${workspaceFolder}/build/src/cli.js",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"--hotsite", "./tests/hotsite/HotSite.json",
				"generate",
				"--generate-type", "javascript"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Create an App",
			"program": "${workspaceFolder}/build/src/cli.js",
			"cwd": "/home/squigglet/temp2/app",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"create",
				"--overwrite-cmd-create-transpile",
				"npm link hotstaq && npm run build",
				"app"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Create an App API",
			"program": "${workspaceFolder}/build/src/cli.js",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"create",
				"--type",
				"api",
				"--overwrite-cmd-create-transpile",
				"npm link hotstaq && npm run build",
				"app"
			]
		},
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Run Tests",
			"skipFiles": [
				"<node_internals>/**"
			],
			"autoAttachChildProcesses": true,
			"preLaunchTask": "Build web test api",
			"program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
			"args": [
				"--timeout", "6000", 
				"--colors", 
				"./build/tests/**/*.js"
			],
			"cwd": "${workspaceFolder}",
			"envFile": "${workspaceFolder}/.env"
		}
	]
}